pipeline{
    agent any

    enviropment{
        NODE_VERSIONS = '20.x'
    }

    tools{
        nodejs "${NODE_VERSIONS}"
    }

    stage{
        stage('Checkout'){
            steps{
                git branch: 'main', url: 'https://github.com/Edel-Weiss/StudentRegistryApp'
            }
        }

        stage('Installing dependencies'){
            steps{
                script{
                    
                    bat 'npm install'
                    
                }
            }
        }

        stage('Start the application'){
            steps{
                script{
                    bat 'start /b npm start'
                    
                }
            }
        }

        stage('Run tests'){
            steps{
                script{
                    bat 'npm test'
                }
            }
        }

        post{
            always{
                echo "CI pipeline completed"
            }
        }




    }
}