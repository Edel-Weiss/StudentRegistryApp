pipeline{
    agent any

    enviropment{
        NODE_VERSIONS = '20.x'
    }

    tools{
        nodejs "${NODE_VERSIONS}"
    }

    stage{
        stage('Checkout'){
            steps{
                checkout scm
            }
        }

        stage('Installing dependencies'){
            steps{
                script{
                    if(isUnix){
                        sh 'npm install'
                    }
                    else{
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Starting the application and Running tests'){
            steps{
                script{
                    sh 'npm start &'
                    sh 'wait-on http://localhost:8090'
                    sh 'npm test'
                }
            }
        }

        post{
            always{
                echo "CI pipeline completed"
            }
        }




    }
}